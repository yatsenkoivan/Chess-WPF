<Window x:Class="Chess_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess_WPF"
        mc:Ignorable="d"
        Title="Chess" Height="640" Width="800" MinHeight="320" MinWidth="400" KeyDown="Press" SizeChanged="Window_SizeChanged" Loaded="Window_Loaded">
    <DockPanel>
        <Label x:Name="LeftOffset" DockPanel.Dock="Left" Width="0"/>
        <Label x:Name="RightOffset" DockPanel.Dock="Right" Width="0"/>
        <Label x:Name="TopOffset" DockPanel.Dock="Top" Height="0"/>
        <Label x:Name="BottomOffset" DockPanel.Dock="Bottom" Height="0"/>
        <Frame x:Name="GameFrame" NavigationUIVisibility="Hidden" MouseDown="GameFrame_MouseDown"/>
    </DockPanel>
</Window>
